#!/bin/bash
# Get all repos of a GitHub user
# Author: Hanno BÃ¶ck, https://hboeck.de/
# SPDX-License-Identifier: 0BSD

if [ -z "$1" ]; then
	echo "Usage:"
	echo "  $0 [username]"
	exit 1
fi

p=0

while true; do
	((p = p + 1))
	out=$(curl -s "https://api.github.com/users/$1/repos?per_page=100&page=$p" |
		jq -r .[].clone_url | sed -e 's:\.git$::g')
	if [ -z "$out" ]; then
		exit 0
	fi
	echo "$out"
done
