#!/usr/bin/python3
# Get all repos of a GitHub org or user
# Author: Hanno BÃ¶ck, https://hboeck.de/
# SPDX-License-Identifier: 0BSD

import argparse
import json
import pathlib
import urllib.request

ap = argparse.ArgumentParser()
ap.add_argument("org", help="Github organization name")
ap.add_argument("-u", "--user", action="store_true", help="Github user instead of organization")
ap.add_argument("--print", action="store_true", help="print URLs instead of writing to files")
args = ap.parse_args()

org = args.org


furl = f"https://api.github.com/orgs/{org}/repos?per_page=100&page="
if args.user:
    furl = f"https://api.github.com/users/{org}/repos?per_page=100&page="

forks = ""
origs = ""

p = 1
while True:
    with urllib.request.urlopen(f"{furl}{p}") as con:
        j = json.load(con)
    if not j:
        break
    for x in j:
        if args.print:
            print(x["html_url"])
        elif x["fork"]:
            forks += x["html_url"] + "\n"
        else:
            origs += x["html_url"] + "\n"
    p += 1

if forks != "":
    pathlib.Path(f"{org}-forks.txt").write_text(forks)
if origs != "":
    pathlib.Path(f"{org}-origs.txt").write_text(origs)
